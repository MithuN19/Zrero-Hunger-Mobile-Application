<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/zero"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp" />

        <!-- Heading -->
        <TextView
            android:id="@+id/about_us_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/about_us_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to the ZeroHunger!\n\nOur mission is to reduce food waste and fight hunger by connecting food donors with those in need. Through this platform, individuals and organizations can donate surplus food to local charities and shelters.\n\nWe believe that together, we can create a world where no food goes to waste and everyone has access to nutritious meals."
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Contact Info -->
        <TextView
            android:id="@+id/contact_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us:\nEmail: support@fooddonationapp.com\nPhone: +9471 456 7890"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</ScrollView>
